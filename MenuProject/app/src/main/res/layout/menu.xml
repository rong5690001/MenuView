<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick">

    <ImageView
        android:id="@+id/menu_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#30000000"
        android:gravity="center"
        android:orientation="vertical">

    <ImageButton
        style="@style/navigation_btn"
        android:id="@+id/navigation_btn_match"
        android:onClick="onClick"
        android:background="@null"
        android:src="@drawable/root_menu_icon_meida" />

    <TextView
        style="@style/navigation_text"
        android:id="@+id/navigation_btn_match_tv"
        android:text="美搭榜单" />

    <ImageButton
        style="@style/navigation_btn"
        android:layout_marginTop="20dp"
        android:id="@+id/navigation_btn_good_match"
        android:onClick="onClick"
        android:background="@null"
        android:src="@drawable/root_menu_match" />

    <TextView
        style="@style/navigation_text"
        android:id="@+id/navigation_btn_good_match_tv"
        android:text="百搭秀场" />

    <ImageButton
        style="@style/navigation_btn"
        android:layout_marginTop="20dp"
        android:id="@+id/navigation_btn_discount"
        android:onClick="onClick"
        android:background="@null"
        android:src="@drawable/root_menu_discount" />

    <TextView
        style="@style/navigation_text"
        android:id="@+id/navigation_btn_discount_tv"
        android:text="我的折扣" />

    <ImageButton
        style="@style/navigation_btn"
        android:layout_marginTop="20dp"
        android:id="@+id/u01_bonusList"
        android:onClick="onClick"
        android:background="@null"
        android:src="@drawable/root_menu_highted" />

    <TextView
        style="@style/navigation_text"
        android:id="@+id/u01_bonusList_tv"
        android:text="潮人晒单" />

    <ImageButton
        style="@style/navigation_btn"
        android:layout_marginTop="20dp"
        android:id="@+id/u01_people"
        android:onClick="onClick"
        android:background="@null"
        android:src="@drawable/root_menu_flash" />

    <TextView
        style="@style/navigation_text"
        android:id="@+id/u01_people_tv"
        android:text="我的搭配" />

    <ImageButton
        style="@style/navigation_btn"
        android:layout_marginTop="20dp"
        android:id="@+id/s17_settting"
        android:onClick="onClick"
        android:background="@null"
        android:src="@drawable/root_menu_setting" />

    <TextView
        style="@style/navigation_text"
        android:id="@+id/s17_settting_tv"
        android:text="个人设置" />
    </LinearLayout>

</FrameLayout>